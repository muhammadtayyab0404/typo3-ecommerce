lib.renderRecord =RECORDS
lib.renderRecord {
	source =26
	tables= tt_content
}


lib.rendergroup = CONTENT
lib.rendergroup{
	table = tt_content
	select {
		pidInList =this
		orderBy = sorting
		where = CType = 'list' = 'news_pi1'
	}
}
lib.dynamicContent = CONTENT
lib.dynamicContent{
	table = tt_content
	select{
		pidInList = 13
		orderBy = sorting
		where= colPos = 20
	}
} 

lib.producttt = CONTENT
lib.producttt {
	table =tt_content
